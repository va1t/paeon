<%= form_for [@diagnosticable, @idiagnostic] do |f| %>
  <% if @idiagnostic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idiagnostic.errors.count, "error") %> prohibited this idiagnostic from being saved:</h2>

      <ul>
      <% @idiagnostic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class='form'>
		<p>Select only one code from the following drop down boxes.</p>
		<div class='field'>
			Select ICD9 Codes:<br />
			<%= f.select :icd9_code, options_from_collection_for_select(@icd9_codes, :code, :display_codes, f.object.icd9_code), {:include_blank => true}, {:class=>'select_tag'} %>
		</div>
		<br />
		<div class='field'>
			Select DSM Codes:<br />
			<%= f.select :dsm_code, options_from_collection_for_select(@dsm_codes, :code, :display_codes, f.object.dsm_code), {:include_blank => true}, {:class=>'select_tag'} %>
		</div>
		<br />
		<div class='field'>
			Select DSM4 Codes:<br />
			<%= f.select :dsm4_code, options_from_collection_for_select(@dsm4_codes, :code, :display_codes, f.object.dsm4_code), {:include_blank => true}, {:class=>'select_tag'} %>
		</div>
		<br />
		<div class='field'>
			Select DSM5 Codes:<br />
			<%= f.select :dsm5_code, options_from_collection_for_select(@dsm5_codes, :code, :display_codes, f.object.dsm5_code), {:include_blank => true}, {:class=>'select_tag'} %>
		</div>
		<br />
	
	  	<div class="button">
	    	<%= f.submit "Save", :class => 'submit' %>
	   </div>
	</div>
<% end %>
