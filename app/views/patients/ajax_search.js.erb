// render the html in the search_dialog div at the bottom
// css hides this div tag from view 
$('.search_dialog').html("<%= escape_javascript(patient_search(@patients)) %>");


// trigger the jquery open dialog widget to display the search_dialog div tag
$('.search_dialog').dialog({
	position: {
		my: "left top",
		at: "left bottom",
		of: "#search"
	},
	title: "Search Results"
});
