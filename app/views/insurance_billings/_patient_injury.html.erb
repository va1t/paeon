							<td><% if @patient_injury.hospitalization_stop %><%= @patient_injury.hospitalization_stop.strftime("%m/%d/%Y") %><% else %>NA<% end %></td>
						</tr>
						<tr>
							<td><b>Disability:</b></td>
							<td><% if @patient_injury.disability_start %><%= @patient_injury.disability_start.strftime("%m/%d/%Y") %><% else %>NA<% end %></td>
							<td><% if @patient_injury.disability_stop %><%= @patient_injury.disability_stop.strftime("%m/%d/%Y") %><% else %>NA<% end %></td>
						</tr>
						<tr>
							<td><b>Unable to Work:</b></td>
							<td><% if @patient_injury.unable_to_work_start %><%= @patient_injury.unable_to_work_start.strftime("%m/%d/%Y") %><% else %>NA<% end %></td>
							<td><% if @patient_injury.unable_to_work_stop %><%= @patient_injury.unable_to_work_stop.strftime("%m/%d/%Y") %><% else %>NA<% end %></td>
						</tr>
					</table>
				</div>				
