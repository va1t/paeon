
<table>
  <tr>
    <th>Provider ID</th>
    <th>Insurance Company</th>
    <th>Effective Date</th>
    <th>Notification Date</th>
    <th>EIN Suffix</th>
    <th></th>
    <th></th>
  </tr>

<% @provider.each do |p| %>
  <tr>
  	<td><%= link_to p.provider_id, polymorphic_path([@providerable,p]) %></td>
    <td><%= link_to p.insurance_company.name, insurance_company_path(:id => p.insurance_company_id, :pr => '1') %></td>
    <td><% if p.effective_date %><%= p.effective_date.strftime("%m/%d/%y") %><% else %>N/A<% end %></td>
    <td><% if p.notification_date %><%= p.notification_date.strftime("%m/%d/%y") %><% else %>N/A<% end %></td>
    <td><% if p.ein_suffix %><%= p.ein_suffix %><% else %>N/A<% end %></td>
    <td><%= link_to image_tag('edit-button.png', :alt => 'Edit', :title => 'Edit', :border => 0, :width => 20, :height => 20), edit_polymorphic_path([@providerable, p]) %></td>
    <td><%= link_to image_tag('del-button.png', :alt => 'Delete', :title => 'Delete', :border => 0, :width => 20, :height => 20), polymorphic_path([@providerable,p]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table><br />

