<h2>The following claims have been selected for printing:</h2>

<%= render :partial => 'print_table', :locals => {:selected => @selected } %>

<%= form_tag processing_claim_submit_path, :method => :post, :id => 'print_claims_pdf' do %>
	<% @claims.each do |c| %>	
	 	<%= hidden_field_tag "checked[]", c.to_i %>
	<% end %>
	<div class='button'>
		<%= submit_tag "Download PDF", :class => 'submit', :id => 'view_claim' %>
	</div>
<% end %>
