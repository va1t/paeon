<div class = 'sidebar'>	
	<% if @show %>
		<%= link_to 'Patients', patients_providers_path(@provider) %>
		<%= link_to 'Manage Offices', provider_offices_path(@provider) %>
		<%= link_to 'Provider Insurance', provider_provider_insurances_path(@provider) %>		
		<%= link_to 'Rates', provider_rates_path(@provider) %>		
		<%= link_to 'Notes', provider_notes_path(@provider) %>
		<%= link_to 'Associate Patients', patient_associate_provider_path(@provider) %>
		<%= link_to 'Associate Groups', associate_provider_path(:id => @provider) %>		
		<%= link_to 'Edit Provider', edit_provider_path(:id => @provider) %>	
	<% end %>
	<%= link_to 'Create a New Provider', new_provider_path %>
	<% if @associate %>
		<%= link_to 'Back to Provider', provider_path(:id => @provider.id) %>
	<% end %>
	
	<% if !@providers %>
		<%= link_to 'Back to Providers', providers_path %>
	<% end %>
	<% if session[:group] %>
		<%= link_to 'Back to Group', group_path(session[:group]) %>
	<% end %>

	<% if @hidden %>
		<%= link_to 'Delete Provider', provider_path(:id => @provider), :data => {:confirm => "Are you sure you want to delete #{@provider.first_name} #{@provider.last_name}?"}, :method => :delete %><br />
	<% end %>

</div>
